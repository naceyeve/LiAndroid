<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/zhihu_item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/item_margin"
              android:paddingTop="@dimen/item_margin"
              android:orientation="horizontal"
                >

    <com.naceyeve.liandroid.widget.CircleImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_image_id"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/image_left_margin"
        android:layout_marginTop="5dp"
       />

    <TextView
        android:id="@+id/item_text_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size"/>
</LinearLayout>